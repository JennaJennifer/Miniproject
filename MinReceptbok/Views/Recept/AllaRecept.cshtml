@model ReceptIndexVM[]

<div class="row" style="margin-top:30px; margin-bottom:40px; margin-left:0px; margin-right:0px;">

    @foreach (var item in Model)
    {
        <div class="card col-3" style="width: 18rem;">
            <img class="card-img-top" src="@item.ImageRefs[0].ImageRef" alt="Card image cap">
            <div class="card-body">
                <h5 class="card-title">@item.Namn</h5>
                <p class="card-text">@item.ReceptBeskrivning</p>
                <a class="btn btn-light" style="color:#424B54; Background-color:#F4B3A1" asp-controller="recept" asp-action="VisaRecept" asp-route-id="@item.Id">Visa Recept </a>
            </div>
        </div>
  

    }
</div>
